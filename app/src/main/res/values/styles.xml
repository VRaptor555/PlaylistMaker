<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsWindowStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginVertical">@dimen/half_medium_padding</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/def_text_size</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginTop">@dimen/half_medium_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/def_text_size</item>
        <item name="drawableStartCompat">@drawable/arrow_back</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
    </style>

    <style name="SearchTextStyle">
        <item name="marginHorizontal">@dimen/medium_padding</item>
        <item name="android:background">@drawable/shape_edit</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColorHint">@color/color_srchIcon</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:drawablePadding">@dimen/half_medium_padding</item>
        <item name="android:drawableTint">@color/color_srchIcon</item>
    </style>
</resources>