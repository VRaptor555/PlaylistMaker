<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsWindowStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginVertical">@dimen/half_medium_padding</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/def_text_size</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginTop">@dimen/half_medium_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:drawablePadding">@dimen/half_full_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">@dimen/half_full_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/def_text_size</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
    </style>

    <style name="SearchTextStyle">
        <item name="marginHorizontal">@dimen/medium_padding</item>
        <item name="android:background">@drawable/shape_edit</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColorHint">@color/color_srchIcon</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:drawablePadding">@dimen/half_medium_padding</item>
        <item name="android:drawableTint">@color/color_srchIcon</item>
    </style>

    <style name="ArtistTextStyle">
        <item name="android:layout_marginStart">@dimen/half_medium_padding</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="TrackHeaderInfoStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/color_head_track</item>
    </style>
    <style name="TrackInfoStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>
    <style name="QueueBtnStyle">
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tintMode">add</item>
        <item name="backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@drawable/queue_button_circle</item>
    </style>
    <style name="PlayBtnStyle">
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@drawable/play_button_circle</item>
        <item name="backgroundTint">?attr/colorOnSecondaryContainer</item>
        <item name="tint">?attr/colorOnPrimaryContainer</item>
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat">
        <item name="colorAccent">@color/color_circular_progress</item>
    </style>
</resources>