<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/color_background_other"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/half_medium_padding">

        <ImageView
            android:id="@+id/image_playlist"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="@dimen/half_medium_padding"
            android:layout_marginVertical="@dimen/half_medium_padding"
            android:contentDescription="@string/playlist_image"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin_playlist"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_text2"
                android:textSize="@dimen/small_text_size"
                tools:text="Best song 2025" />

            <TextView
                android:id="@+id/count_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_settings_icon"
                android:textSize="@dimen/playlist_count_text"
                tools:text="198 треков" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>