<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/back_color"
    android:padding="@dimen/medium_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="start"
        android:layout_marginBottom="@dimen/half_medium_padding"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/medium_padding"
        android:textSize="@dimen/def_text_size"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/half_medium_padding"
        android:layout_marginHorizontal="@dimen/medium_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/search_button"
        android:textColor="@color/text_color"
        android:textSize="@dimen/def_text_size"
        android:textAllCaps="false"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/search_btn"
        app:cornerRadius="@dimen/radius_button"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/black"
        app:iconTintMode="multiply" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/half_medium_padding"
        android:layout_marginHorizontal="@dimen/medium_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/library_button"
        android:textColor="@color/text_color"
        android:textSize="@dimen/def_text_size"
        android:textAllCaps="false"
        android:id="@+id/library_btn"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="@dimen/radius_button"
        app:icon="@drawable/library"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/black"
        app:iconTintMode="multiply" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/half_medium_padding"
        android:layout_marginBottom="@dimen/medium_padding"
        android:layout_marginHorizontal="@dimen/medium_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/settings_button"
        android:textColor="@color/text_color"
        android:textSize="@dimen/def_text_size"
        android:textAllCaps="false"
        android:id="@+id/settings_btn"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="@dimen/radius_button"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/black"
        app:iconTintMode="multiply" />

</LinearLayout>