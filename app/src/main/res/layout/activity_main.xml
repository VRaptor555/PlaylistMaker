<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/medium_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginVertical="@dimen/medium_padding"
        android:layout_marginStart="@dimen/medium_padding"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/app_name"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/def_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/medium_padding"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_btn"
            style="@style/MainButtonsStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/search_button"
            app:icon="@drawable/search" />

        <Button
            android:id="@+id/library_btn"
            style="@style/MainButtonsStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/library_button"
            app:icon="@drawable/library" />

        <Button
            android:id="@+id/settings_btn"
            style="@style/MainButtonsStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/settings_button"
            app:icon="@drawable/settings" />
    </LinearLayout>

</LinearLayout>