<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <layer-list>
            <item android:top="8dp">
                <shape>
                    <size android:height="54dp"/>
                    <stroke android:color="@color/frame_active"
                        android:width="1dp"/>
                    <corners android:radius="3.5dp"/>
                </shape>
            </item>
            <item android:gravity="start|top"
                android:start="4dp">
                <shape>
                    <size android:height="14dp"/>
                    <padding android:left="8dp"
                        android:right="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>